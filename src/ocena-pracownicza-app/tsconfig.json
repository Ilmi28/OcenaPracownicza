{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",

        "types": ["vitest/globals", "vite/client"],

        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true
    },
    "include": ["src","tests"]
}
